<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1><strong>List of Movies</strong></h1>
    <%= link_to "Add new list", new_list_path, class: 'btn btn-flat text-decoration-none text-white'  %>
  </div>
</div>

<div class="cards">
<% @lists.each do |list| %>
  <div class="card-product">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos">
      <h2><%= link_to list.name, list_path(list), class: 'text-decoration-none text-black' %></h2>
      <%= link_to "Add to bookmark", new_list_bookmark_path(list), class: 'btn btn-flat text-decoration-none text-white'  %>
    </div>
  </div>
<% end %>
